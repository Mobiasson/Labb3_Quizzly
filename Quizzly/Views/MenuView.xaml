<UserControl x:Class="Quizzly.Views.MenuView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Quizzly.Views" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding MenuViewModel}">
	<Menu>
		<MenuItem Header="_File">
			<!-- Use RelativeSource to pick up the UserControl DataContext (MenuViewModel) -->
			<MenuItem Header="_New Question Pack" />
			<Separator />
			<MenuItem Header="_Import Question Pack" Click="MenuItem_Click" InputGestureText="Ctrl+I" />
			<Separator />
			<MenuItem Header="E_xit" InputGestureText="Ctrl+X" Click="ExitFromMenu" />
		</MenuItem>
		<MenuItem Header="_Edit">
			<MenuItem Header="Add Question" Command="{Binding DataContext.AddQuestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
			<MenuItem Header="Remove Question" InputGestureText="Ctrl+R" Command="{Binding DataContext.RemoveQuestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
			<MenuItem Header="Set PackName" />
			<MenuItem Header="Pack Options" />
		</MenuItem>
	</Menu>
</UserControl>