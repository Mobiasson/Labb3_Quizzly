<UserControl x:Class="Quizzly.Views.MenuView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Quizzly.Views" xmlns:fa="http://schemas.fontawesome.io/icons/" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding MenuViewModel}">
	<UserControl.Resources>
		<Style TargetType="fa:FontAwesome">
			<Setter Property="Width" Value="auto" />
			<Setter Property="Height" Value="auto" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Center" />
		</Style>
	</UserControl.Resources>
	<Menu>
		<MenuItem Header="_File">
			<MenuItem x:Name="questionpack_button" Header="_New Question Pack" Click="questionpack_button_Click">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="File" />
				</MenuItem.Icon>
			</MenuItem>
			<Separator />
			<MenuItem Header="_Import Question Pack" InputGestureText="Ctrl+I" Click="MenuItem_Click">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="Download" />
				</MenuItem.Icon>
			</MenuItem>
			<Separator />
			<MenuItem Header="E_xit" InputGestureText="Ctrl+X" Click="ExitFromMenu">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="WindowClose" />
				</MenuItem.Icon>
			</MenuItem>
		</MenuItem>
		<MenuItem Header="_Edit">
			<MenuItem Header="Add Question" Command="{Binding DataContext.AddQuestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="Plus" />
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem Header="Remove Question" InputGestureText="Ctrl+R" Command="{Binding DataContext.RemoveQuestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="Trash" />
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem x:Name="packName_button" Header="Set PackName" Click="packName_button_Click">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="Edit" />
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem x:Name="pack_button" Header="Pack Options" Click="pack_button_Click">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="Cogs" />
				</MenuItem.Icon>
			</MenuItem>
		</MenuItem>
		<MenuItem Header="_View">
			<MenuItem Header="Play" Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType=Window}}">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="Play" />
				</MenuItem.Icon>
			</MenuItem>
			<Separator />
			<MenuItem x:Name="fullscreenMenuItem" Header="Fullscreen" Command="{Binding FullscreenCommand}" InputGestureText="F11">
				<MenuItem.Icon>
					<fa:FontAwesome Icon="WindowMaximize" />
				</MenuItem.Icon>
			</MenuItem>
		</MenuItem>
	</Menu>
</UserControl>