<Window x:Class="Quizzly.Dialogs.PackOptionsDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Pack Options" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Width="auto" Height="auto">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0">
			<Label Content="Difficulty" FontWeight="Bold" />
			<ComboBox ItemsSource="{Binding Difficulties}" SelectedItem="{Binding CurrentDifficulty, Mode=TwoWay}" IsEditable="False" />
			<DockPanel Margin="5">
				<Label Content="Timer Limit (seconds)" FontWeight="Bold" />
				<TextBox Width="auto" Margin="5" Text="{Binding ElementName=timerValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" />
			</DockPanel>
			<Slider x:Name="timerValue" Minimum="5" Maximum="60" Value="30" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" />
		</StackPanel>
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
			<Button x:Name="cancel_button" Content="Cancel" IsCancel="True" Width="auto" Margin="5" Padding="5" Click="cancel_button_Click" />
			<Button x:Name="confirm_button" Content="Confirm" IsDefault="True" Width="auto" Margin="5" Padding="5" Click="confirm_button_Click" />
		</StackPanel>
	</Grid>
</Window>