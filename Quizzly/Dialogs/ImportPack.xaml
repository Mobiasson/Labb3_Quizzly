<Window x:Class="Quizzly.Dialogs.ImportPack" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="ImportPack" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight">
	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="1" Orientation="Vertical" Margin="5">
			<Label Content="Difficulty" FontWeight="Bold" />
			<ComboBox ItemsSource="{Binding Difficulties}" SelectedItem="{Binding CurrentDifficulty, Mode=TwoWay}" IsEditable="False" />
			<Label Content="Category" FontWeight="Bold" />
			<ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding CurrentCategory, Mode=TwoWay}" DisplayMemberPath="name" IsEditable="False" />
			<DockPanel Margin="5">
				<Label Content="TimerLimit" FontWeight="Bold" />
				<TextBox HorizontalAlignment="Right" Text="{Binding ElementName=timerValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="20" />
			</DockPanel>
			<Slider Margin="0" Padding="5" Height="auto" Width="auto" TickPlacement="BottomRight" TickFrequency="5" Minimum="5" Maximum="60" IsSnapToTickEnabled="True" Name="timerValue" />
			<DockPanel Margin="5">
				<Label Content="Amount of questions" FontWeight="Bold" />
				<TextBox HorizontalAlignment="Right" Text="{Binding ElementName=questionValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="20" />
			</DockPanel>
			<Slider Margin="0" Padding="5" Height="auto" Width="auto" TickPlacement="BottomRight" TickFrequency="1" Minimum="5" Maximum="20" IsSnapToTickEnabled="True" Name="questionValue" />
		</StackPanel>
		<StackPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
			<Button x:Name="back_button" Margin="5" Padding="5" Content="Back" Click="Button_Click" />
			<Button Margin="5" Padding="5" Content="Import" Click="ImportButton_Click" />
		</StackPanel>
	</Grid>
</Window>