<Window x:Class="Quizzly.Dialogs.ImportPack" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="ImportPack" Height="300" Width="330">
	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Content="Difficulty" FontWeight="Bold" />
		<ComboBox Grid.Row="1" ItemsSource="{Binding Difficulties}" SelectedItem="{Binding CurrentDifficulty, Mode=TwoWay}" HorizontalContentAlignment="Left" Margin="5" IsEditable="False" />
		<Label Grid.Row="2" Content="Category" FontWeight="Bold" />
		<ComboBox Grid.Row="3" ItemsSource="{Binding Categories}" SelectedItem="{Binding CurrentCategory, Mode=TwoWay}" HorizontalContentAlignment="Left" DisplayMemberPath="name" Margin="5" IsEditable="False" />
		<DockPanel Grid.Row="4" VerticalAlignment="Center">
			<Label Content="TimerLimit" Margin="0" Padding="5" FontWeight="Bold" />
			<TextBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding ElementName=timerValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="20" />
		</DockPanel>
		<Slider Grid.Row="5" Margin="0" Padding="5" Height="auto" Width="auto" TickPlacement="BottomRight" TickFrequency="5" Minimum="5" Maximum="60" IsSnapToTickEnabled="True" Name="timerValue" />
		<Button Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" Padding="5" Content="Import" Click="ImportButton_Click" />
		<Button x:Name="back_button" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5" Padding="5" Content="Back" Click="Button_Click" />
	</Grid>
</Window>