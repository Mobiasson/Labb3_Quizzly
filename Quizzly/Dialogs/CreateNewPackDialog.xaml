<Window x:Class="Quizzly.Dialogs.CreateNewPackDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Quizzly.Dialogs" mc:Ignorable="d" Title="Create New Pack" Height="auto" Width="auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Padding="20">
	<StackPanel Orientation="Vertical">
		<TextBlock Text="New pack name:" Width="auto" Margin="10 10 10 0" />
		<TextBox x:Name="packNameTextBox" Width="170" Margin="10 5 10 10" />
		<Label Content="Difficulty" FontWeight="Bold" Margin="10 0 10 0" />
		<ComboBox ItemsSource="{Binding Difficulties}" SelectedItem="{Binding CurrentDifficulty, Mode=TwoWay}" IsEditable="False" Margin="10 0 10 10" />
		<DockPanel Margin="10 0 10 0">
			<Label Content="TimerLimit" FontWeight="Bold" />
			<TextBox HorizontalAlignment="Right" Text="{Binding ElementName=timerValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="20" />
		</DockPanel>
		<Slider Margin="10 0 10 10" Padding="5" Height="auto" Width="auto" TickPlacement="BottomRight" TickFrequency="5" Minimum="5" Maximum="60" IsSnapToTickEnabled="True" Name="timerValue" />
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 10 10 10">
			<Button x:Name="cancel_button" Content="Cancel" IsCancel="True" Width="auto" Margin="5" Padding="5" Click="cancel_button_Click" />
			<Button x:Name="confirm_button" Content="Confirm" IsDefault="True" Width="auto" Margin="5" Padding="5" Click="confirm_button_Click" />
		</StackPanel>
	</StackPanel>
</Window>